  ? featuredPosts
  : latestPosts.slice(0, 3);

const heroPost = heroPosts[0];
const secondaryPosts = heroPosts.slice(1, 3);

const schemas = [generateWebSiteSchema(), generateOrganizationSchema()];

// UTM params
