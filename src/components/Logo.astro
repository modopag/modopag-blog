---
import { BRAND } from '@/lib/images';

interface Props {
  class?: string;
  variant?: 'dark' | 'yellow';
  size?: 'sm' | 'md' | 'lg';
}

const { class: className = '', variant = 'dark', size = 'md' } = Astro.props;

const logoUrl = variant === 'yellow' ? BRAND.logoYellow : BRAND.logoDark;

const sizeClasses = {
  sm: 'h-6',
  md: 'h-8',
  lg: 'h-10',
};
---

<a href="/" class:list={['flex items-center', className]}>
  <img
    src={logoUrl}
    alt="modoPAG"
    width="160"
    height="40"
    loading="eager"
    decoding="async"
    class:list={[sizeClasses[size], 'w-auto object-contain']}
  />
</a>
