---
import type { TableOfContentsItem } from '@/lib/types';

interface Props {
  items: TableOfContentsItem[];
}

const { items } = Astro.props;
---

{items.length > 0 && (
  <nav class="bg-secondary-50 dark:bg-secondary-700 rounded-xl p-6 mb-8">
    <h2 class="text-lg font-semibold text-secondary-500 dark:text-white mb-4">
      Neste artigo
    </h2>
    <ul class="space-y-2">
      {items.map((item) => (
        <li
          class:list={[
            'text-sm',
            item.level === 3 && 'ml-4',
          ]}
        >
          <a
            href={`#${item.id}`}
            class="text-secondary-500 hover:text-primary-600 dark:text-secondary-300 dark:hover:text-primary-400 transition-colors"
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
