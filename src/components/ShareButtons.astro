---

<div class="flex flex-wrap items-center gap-3">
  <span class="text-sm font-medium text-secondary-500 dark:text-secondary-300">
    Compartilhar:
  </span>
  {buttons.map((button) => (
    <a
      href={button.href}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[
        'p-2.5 rounded-lg bg-secondary-100 dark:bg-secondary-700 text-secondary-500 dark:text-secondary-300 transition-all hover:text-white',
        button.color,
      ]}
      aria-label={`Compartilhar no ${button.name}`}
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <Fragment set:html={button.icon} />
      </svg>
    </a>
  ))}

  <!-- Copy Link Button -->
  <button
    id="copy-link-btn"
    type="button"
    class="p-2.5 rounded-lg bg-secondary-100 dark:bg-secondary-700 text-secondary-500 dark:text-secondary-300 transition-all hover:bg-primary-500 hover:text-secondary-500"
    aria-label="Copiar link"
    data-url={url}
  >
    <svg id="copy-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
    </svg>
    <svg id="check-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
  </button>
</div>

<!-- Toast Notification -->
<div
  id="copy-toast"
  class="fixed bottom-20 left-1/2 -translate-x-1/2 px-4 py-2 bg-secondary-500 text-white text-sm font-medium rounded-lg shadow-lg opacity-0 invisible transition-all duration-300 z-50"
>
  Link copiado!
</div>

<script>
  function initCopyLink() {
    const btn = document.getElementById('copy-link-btn');
    const copyIcon = document.getElementById('copy-icon');
    const checkIcon = document.getElementById('check-icon');
    const toast = document.getElementById('copy-toast');

    if (!btn || !copyIcon || !checkIcon || !toast) return;

    btn.addEventListener('click', async () => {
      const url = btn.getAttribute('data-url');
      if (!url) return;

      try {
        await navigator.clipboard.writeText(url);

        // Show check icon
        copyIcon.classList.add('hidden');
        checkIcon.classList.remove('hidden');

        // Show toast
        toast.classList.remove('opacity-0', 'invisible');
        toast.classList.add('opacity-100', 'visible');

        // Reset after 2 seconds
        setTimeout(() => {
          copyIcon.classList.remove('hidden');
          checkIcon.classList.add('hidden');
          toast.classList.remove('opacity-100', 'visible');
          toast.classList.add('opacity-0', 'invisible');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  }

  initCopyLink();
  document.addEventListener('astro:after-swap', initCopyLink);
</script>
