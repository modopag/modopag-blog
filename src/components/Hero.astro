---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="py-12 md:py-16 text-center">
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-secondary-500 dark:text-white mb-4">
    {title}
  </h1>
  {subtitle && (
    <p class="text-lg md:text-xl text-secondary-400 dark:text-secondary-300 max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</section>
