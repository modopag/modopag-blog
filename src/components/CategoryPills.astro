---
import type { Category } from '@/lib/types';

interface Props {
  categories: Category[];
  activeSlug?: string;
}

const { categories, activeSlug } = Astro.props;
---

<div class="flex flex-wrap gap-2 mb-8">
  <a
    href="/blog/"
    class:list={[
      'px-4 py-2 rounded-full text-sm font-medium transition-all',
      !activeSlug
        ? 'bg-primary-500 text-secondary-500'
        : 'bg-secondary-100 text-secondary-600 hover:bg-secondary-200 dark:bg-secondary-700 dark:text-secondary-200 dark:hover:bg-secondary-600',
    ]}
  >
    Todos
  </a>
  {categories.map((category) => (
    <a
      href={`/blog/${category.slug}/`}
      class:list={[
        'px-4 py-2 rounded-full text-sm font-medium transition-all',
        activeSlug === category.slug
          ? 'bg-primary-500 text-secondary-500'
          : 'bg-secondary-100 text-secondary-600 hover:bg-secondary-200 dark:bg-secondary-700 dark:text-secondary-200 dark:hover:bg-secondary-600',
      ]}
    >
      {category.emoji && <span class="mr-1">{category.emoji}</span>}
      {category.name}
    </a>
  ))}
</div>
