---
import Logo from './Logo.astro';
import LeadCaptureForm from './LeadCaptureForm.astro';

const currentYear = new Date().getFullYear();
const NEWSLETTER_SEGMENT_ID = '78682';

const footerLinks = {
  produto: [
    { label: 'Maquininhas', href: 'https://modopag.com.br/maquininhas' },
    { label: 'Taxas', href: 'https://modopag.com.br/taxas' },
    { label: 'Calculadora', href: '/blog/calculadoras/' },
  ],
  recursos: [
    { label: 'Blog', href: '/blog/' },
    { label: 'Gest√£o', href: '/blog/gestao/' },
    { label: 'Central de Ajuda', href: 'https://modopag.com.br/ajuda' },
  ],
  empresa: [
    { label: 'Sobre', href: 'https://modopag.com.br/sobre' },
    { label: 'Carreiras', href: 'https://modopag.com.br/carreiras' },
    { label: 'Contato', href: 'https://modopag.com.br/contato' },
  ],
  legal: [
    { label: 'Termos de Uso', href: 'https://modopag.com.br/termos' },
    { label: 'Privacidade', href: 'https://modopag.com.br/privacidade' },
  ],
};

const socialLinks = [
  {
    label: 'Instagram',
    href: 'https://instagram.com/modopag',
    icon: `<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>`,
  },
  {
    label: 'LinkedIn',
    href: 'https://linkedin.com/company/modopag',
    icon: `<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>`,
  },
  {
    label: 'Twitter',
    href: 'https://twitter.com/modopag',
    icon: `<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>`,
  },
];
---

<!-- Newsletter Section -->
<section class="bg-secondary-600 py-12">
  <div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="mb-6">
      <span class="text-4xl">üì¨</span>
    </div>
    <h2 class="text-2xl font-bold text-white mb-3">
      Newsletter modoPAG
    </h2>
    <p class="text-secondary-300 mb-6">
      Receba dicas exclusivas sobre maquininhas, taxas e gest√£o financeira direto no seu e-mail.
    </p>
    <LeadCaptureForm
      segmentId={NEWSLETTER_SEGMENT_ID}
      buttonText="Quero Receber"
      showPhone={false}
      class="newsletter-footer-form"
    />
  </div>
</section>

<footer class="bg-secondary-500 text-secondary-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 lg:gap-12">
      <!-- Logo and description -->
      <div class="col-span-2 md:col-span-1">
        <Logo variant="yellow" size="lg" />
        <p class="mt-4 text-sm text-secondary-300">
          A forma mais simples de aceitar pagamentos no seu neg√≥cio.
        </p>
        <div class="flex gap-4 mt-6">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary-400 hover:text-primary-500 transition-colors"
              aria-label={social.label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Produto -->
      <div>
        <h3 class="font-semibold text-white mb-4">Produto</h3>
        <ul class="space-y-3">
          {footerLinks.produto.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-secondary-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Recursos -->
      <div>
        <h3 class="font-semibold text-white mb-4">Recursos</h3>
        <ul class="space-y-3">
          {footerLinks.recursos.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-secondary-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Empresa -->
      <div>
        <h3 class="font-semibold text-white mb-4">Empresa</h3>
        <ul class="space-y-3">
          {footerLinks.empresa.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-secondary-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-semibold text-white mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-secondary-300 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-secondary-600">
      <p class="text-center text-sm text-secondary-400">
        &copy; {currentYear} modoPAG. Todos os direitos reservados.
      </p>
    </div>
  </div>
</footer>

<style>
  /* Newsletter form styles for dark background */
  .newsletter-footer-form :global(input) {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .newsletter-footer-form :global(input::placeholder) {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-footer-form :global(input:focus) {
    border-color: #fbbf24;
    background-color: rgba(255, 255, 255, 0.15);
  }

  .newsletter-footer-form :global(h3),
  .newsletter-footer-form :global(.font-bold) {
    color: white;
  }

  .newsletter-footer-form :global(p.text-secondary-400) {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-footer-form :global(p.text-xs) {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-footer-form :global(a) {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-footer-form :global(a:hover) {
    color: white;
  }

  .newsletter-footer-form :global(.success-message) {
    background-color: rgba(34, 197, 94, 0.2);
  }

  .newsletter-footer-form :global(.success-message h3) {
    color: #86efac;
  }

  .newsletter-footer-form :global(.success-message p) {
    color: #bbf7d0;
  }
</style>
