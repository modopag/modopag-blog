---
interface Props {
  name?: string;
  bio?: string;
  avatar?: string;
  twitter?: string;
  linkedin?: string;
}

const {
  name = 'Equipe modoPAG',
  bio = 'Especialistas em pagamentos e soluções financeiras para empreendedores brasileiros.',
  avatar,
  twitter,
  linkedin,
} = Astro.props;

const initials = name
  .split(' ')
  .map((n) => n[0])
  .slice(0, 2)
  .join('')
  .toUpperCase();
---

<section class="my-10 p-6 bg-secondary-50 dark:bg-secondary-600 rounded-2xl">
  <h3 class="text-sm font-semibold text-secondary-400 dark:text-secondary-300 uppercase tracking-wider mb-4">
    Sobre o Autor
  </h3>
  <div class="flex items-start gap-4">
    <!-- Avatar -->
    {avatar ? (
      <img
        src={avatar}
        alt={name}
        class="w-16 h-16 rounded-full object-cover flex-shrink-0"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-16 h-16 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
        <span class="text-xl font-bold text-secondary-500">{initials}</span>
      </div>
    )}

    <!-- Info -->
    <div class="flex-1 min-w-0">
      <h4 class="text-lg font-semibold text-secondary-500 dark:text-white mb-1">
        {name}
      </h4>
      <p class="text-secondary-500 dark:text-secondary-300 text-sm leading-relaxed">
        {bio}
      </p>

      <!-- Social Links -->
      {(twitter || linkedin) && (
        <div class="flex items-center gap-3 mt-3">
          {twitter && (
            <a
              href={`https://twitter.com/${twitter}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary-400 hover:text-primary-500 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          )}
          {linkedin && (
            <a
              href={`https://linkedin.com/in/${linkedin}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary-400 hover:text-primary-500 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
