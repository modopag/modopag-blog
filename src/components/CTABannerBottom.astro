---
interface Props {
  utmSource?: string;
  utmMedium?: string;
  utmCampaign?: string;
}

const {
  utmSource = 'blog',
  utmMedium = 'cta_footer',
  utmCampaign = 'homepage',
} = Astro.props;

const utmParams = `?utm_source=${utmSource}&utm_medium=${utmMedium}&utm_campaign=${utmCampaign}`;
const maquininhasUrl = `https://modopag.com.br/maquininhas${utmParams}`;
---

<section class="bg-[#0a0a0a] py-12 md:py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
      Comece a economizar hoje
    </h2>

    <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
      Pix, débito e crédito até 18x. Dinheiro na conta na hora.
    </p>

    <a
      href={maquininhasUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-400 text-secondary-600 font-semibold rounded-lg transition-colors text-lg"
      data-no-instant
    >
      Conhecer modoPAG
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>
