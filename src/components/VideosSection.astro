  channelUrl = 'https://youtube.com/@modopag',
} = Astro.props;

// Default videos if none provided (placeholder data)
const defaultVideos: Video[] = [
  {
    id: 'dQw4w9WgXcQ',
    title: 'Como escolher a melhor maquininha para seu negÃ³cio',
    description: 'Guia completo com dicas para fazer a escolha certa',
