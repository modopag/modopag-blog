const displayVideos = videos.length > 0 ? videos : defaultVideos;
const hasRealVideos = videos.length > 0;

function getYouTubeThumbnail(videoId: string): string {
  return `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
}

function getYouTubeUrl(videoId: string): string {
  return `https://www.youtube.com/watch?v=${videoId}`;
}
---

{displayVideos.length > 0 && hasRealVideos && (
  <section class="py-12 md:py-16">
    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-8">
      <div>
        <h2 class="text-2xl md:text-3xl font-bold text-secondary-500 mb-2">
          {title}
        </h2>
        <p class="text-secondary-400">
          {subtitle}
        </p>
      </div>

      {channelUrl && (
        <a
          href={channelUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-red-600 hover:text-red-700 font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Inscreva-se no canal
        </a>
      )}
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {displayVideos.slice(0, 3).map((video) => (
        <a
          href={getYouTubeUrl(video.id)}
          target="_blank"
          rel="noopener noreferrer"
          class="group block bg-white rounded-2xl border border-secondary-100 overflow-hidden hover:shadow-xl hover:shadow-secondary-200/50 hover:border-red-200 transition-all duration-300 hover:-translate-y-1"
        >
          <!-- Thumbnail with play button -->
          <div class="relative aspect-video overflow-hidden bg-secondary-100">
            <img
              src={video.thumbnail || getYouTubeThumbnail(video.id)}
              alt={video.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <!-- Play button overlay -->
            <div class="absolute inset-0 flex items-center justify-center bg-black/20 group-hover:bg-black/30 transition-colors">
              <div class="w-14 h-14 rounded-full bg-red-600 flex items-center justify-center group-hover:scale-110 transition-transform shadow-lg">
                <svg class="w-6 h-6 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            <!-- YouTube badge -->
            <div class="absolute bottom-2 right-2">
              <span class="px-2 py-1 bg-black/70 text-white text-xs rounded flex items-center gap-1">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
                </svg>
                YouTube
              </span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-5">
            <h3 class="font-semibold text-secondary-500 mb-2 line-clamp-2 group-hover:text-red-600 transition-colors">
              {video.title}
            </h3>
            {video.description && (
              <p class="text-sm text-secondary-400 line-clamp-2">
                {video.description}
              </p>
            )}
          </div>
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
